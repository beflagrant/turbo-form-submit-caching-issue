<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <% unless @post.published %>
    <%= button_to 'Publish', publish_post_path(@post) %>
  <% else %>
    <%= button_to 'Unpublish', unpublish_post_path(@post) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
